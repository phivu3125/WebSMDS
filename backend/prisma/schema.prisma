// Force regenerate on Render
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Event {
  id              String         @id @default(uuid())
  title           String
  slug            String         @unique
  description     String
  fullDescription String?        @db.Text
  content         String?        @db.Text
  image           String?
  location        String?
  openingHours    String?
  dateDisplay     String?
  venueMap        String?
  pricingImage    String?
  status          String         @default("draft")
  sections        EventSection[]
  registrations   EventRegistration[]
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@map("events")
}

model EventRegistration {
  id        String   @id @default(uuid())
  eventId   String
  fullName  String
  email     String?
  phone     String
  note      String?  @db.Text
  status    String   @default("unread")
  readAt    DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@map("event_registrations")
  @@index([eventId, createdAt])
}

model EventSection {
  id        String   @id @default(uuid())
  eventId   String
  title     String
  items     String[] @default([])
  position  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@map("event_sections")
  @@index([eventId, position])
}

model Product {
  id          String              @id @default(uuid())
  name        String
  slug        String              @unique
  description String
  content     String?             @db.Text
  price       Float
  image       String?
  images      String[]
  categoryId  String?
  category    String?
  stock       Int                 @default(0)
  inStock     Boolean             @default(true)
  purchaseUrl String?
  status      String              @default("published")
  featured    Boolean             @default(false)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  productCategory product_categories? @relation(fields: [categoryId], references: [id])
  orderItems  OrderItem[]

  @@map("products")
}

model Press {
  id          Int      @id @default(autoincrement())
  source      String
  title       String
  description String   @db.Text
  date        String
  type        String
  link        String
  image       String
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("press")
}

model Story {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  content     String   @db.Text
  author      String?
  authorEmail String?
  image       String?
  status      String   @default("pending")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("stories")
}

model Idea {
  id          String   @id @default(uuid())
  title       String
  description String   @db.Text
  submitter   String
  email       String
  phone       String?
  status      String   @default("pending")
  notes       String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("ideas")
}

model Order {
  id              String      @id @default(uuid())
  orderNumber     String      @unique
  customerName    String
  customerEmail   String
  customerPhone   String
  shippingAddress String      @db.Text
  totalAmount     Float
  status          String      @default("pending")
  notes           String?     @db.Text
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  orderItems      OrderItem[]

  @@map("orders")
}

model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  productId String
  quantity  Int
  price     Float
  createdAt DateTime @default(now())
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id])

  @@map("order_items")
}

model EmailSubscription {
  id           String   @id @default(uuid())
  email        String   @unique
  status       String   @default("subscribed")
  subscribedAt DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("email_subscriptions")
}

model TalkSection {
  key         String   @id @default("default")
  title       String?
  description String?  @db.Text
  liveInput   String?  @db.Text
  replayInput String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("talk_sections")
}

model PastEvent {
  id             String   @id @default(uuid())
  title          String
  slug           String   @unique
  subtitle       String?
  description    String?  @db.Text
  thumbnailImage String?
  year           Int

  hero        Json      @default("{}")
  intro       Json      @default("{}")
  featureList Json      @default("{}")
  gallery     Json      @default("{}")
  conclusion  Json      @default("{}")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("past_events")
  @@index([year])
}

model product_categories {
  id        String    @id @default(uuid())
  name      String
  slug      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime
  products  Product[]
}
